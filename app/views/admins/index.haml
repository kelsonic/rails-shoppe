%h1 Listing products

= link_to 'New Product', new_product_path

%table.table.table-striped.center
  %thead
    %tr
      %th Name
      %th Description
      %th Price
      %th Inventory quantity
      %th{:colspan => "3"}
  %tbody
    - @products.each do |product|
      %tr
        %td= product.name
        %td= product.description.truncate(40)
        %td
          $#{product.price}
        %td= product.inventory_quantity
        %td= link_to 'Edit', edit_product_path(product)
        %td= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Product', new_product_path
