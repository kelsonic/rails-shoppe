%h1
  Your Cart

%table.table.table-striped.center
  %thead
    %tr
      %th.center Name
      %th.center Description
      %th.center Quantity
      %th.center Total Price
      %th.center
  %tbody
    - @checkout.each do |item|
      %tr
        %td=item[:product].name
        %td=item[:product].description
        %td=item[:quantity]
        %td=item[:product].price * item[:quantity]
        %td
          = link_to "remove", my_cart_path(prod_id: item[:product].id)



%div.center
  %p
    Total Cost: $#{@total_cost}
  %button.btn.btn-success= link_to "Checkout", new_order_path
